[Unit]
Description=Prusa Timelapse Monitor with Auto-Detection
After=network-online.target {{MOUNT_UNIT}}
Wants=network-online.target
Requires={{MOUNT_UNIT}}

[Service]
Type=simple
ExecStart=/usr/bin/python3 -m src.timelapse
WorkingDirectory={{INSTALL_DIR}}
Restart=always
RestartSec=30
User={{USER}}

[Install]
WantedBy=multi-user.target
