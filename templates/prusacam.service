[Unit]
Description=Prusa Connect Camera Snapshot Uploader
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
Environment=PYTHONUNBUFFERED=1
ExecStart=/usr/bin/python3 -u -m src.uploader_service
WorkingDirectory={{INSTALL_DIR}}
Restart=always
RestartSec=10
User={{USER}}

[Install]
WantedBy=multi-user.target
